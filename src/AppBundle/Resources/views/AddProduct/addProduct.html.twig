{% extends "::base.html.twig" %}

{% block title %}AddProduct{% endblock %}

{% block body %}
    <div>
        {% include 'show_product.html.twig' %}
    </div>
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    <div class="form-group">
        <div class="col-sm-4">
            {{ form_errors(form.productName) }}
            {{ form_widget(form.productName, {'attr': {'class': 'col-sm-3 form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4">
            {{ form_errors(form.amount) }}
            {{ form_widget(form.amount, {'attr': {'class': 'col-sm-3 form-control'}}) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-4">
            {{ form_errors(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'col-sm-3 form-control'}}) }}
        </div>
    </div>
    <div>
        <button type='submit' name="submit" class='btn btn-success btnLogin'>Ajouter</button>
    </div>
    {{ form_end(form) }}
    <div>
        {% include 'default/footer.html.twig' %}
    </div>
{% endblock %}
