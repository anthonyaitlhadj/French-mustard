{% extends "::base.html.twig" %}

{% block title %}Register{% endblock %}

{% block body %}


<div>

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_errors(form.lastname) }}
                    {{ form_widget(form.lastname, {'attr': {'class': 'col-sm-3 form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_errors(form.firstname) }}
                    {{ form_widget(form.firstname, {'attr': {'class': 'col-sm-3 form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'col-sm-3 form-control'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-4">
                    {{ form_errors(form.password) }}
                    {{ form_widget(form.password, {'attr': {'class': 'col-sm-3 form-control'}}) }}
                </div>
            </div>
            <div>
                <button type='submit' name="submit" class='btn btn-success'>Inscription</button>
            </div>
        {{ form_end(form) }}

</div>
{% endblock %}
