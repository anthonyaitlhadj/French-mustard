{% extends "::base.html.twig" %}

{% block title %}Register{% endblock %}

{% block body %}

    <div>
        {% include('default/index.html.twig') %}
    </div>

<div class="container marginBody centerForm">
    <div class="col-xs-4 centerText">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

            <div class="form-group">
                <div>
                    {{ form_errors(form.lastname) }}
                    {{ form_widget(form.lastname, {'attr': {'class': 'col-sm-3 form-control inputLogin'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div>
                    {{ form_errors(form.firstname) }}
                    {{ form_widget(form.firstname, {'attr': {'class': 'col-sm-3 form-control inputLogin'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div>
                    {{ form_errors(form.email) }}
                    {{ form_widget(form.email, {'attr': {'class': 'col-sm-3 form-control inputLogin'}}) }}
                </div>
            </div>
            <div class="form-group">
                <div>
                    {{ form_errors(form.password) }}
                    {{ form_widget(form.password, {'attr': {'class': 'col-sm-3 form-control inputLogin'}}) }}
                </div>
            </div>
            <div>
                <button type='submit' name="submit" class='btn btn-success btnLogin'>Inscription</button>
            </div>
        {{ form_end(form) }}
        </div>
    </div>
    <div>
        {% include('default/footer.html.twig') %}
    </div>
{% endblock %}
