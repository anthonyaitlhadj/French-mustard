{% extends "::base.html.twig" %}

{% block title %}Login{% endblock %}

{% block body %}
    <div>

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group">
            <div class="col-sm-4">
                {{ form_errors(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'col-sm-3 form-control inputLogin'}}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-4">
                {{ form_errors(form.password) }}
                {{ form_widget(form.password, {'attr': {'class': 'col-sm-3 form-control inputLogin'}}) }}
            </div>
        </div>
        <div>
            <button type='submit' name="submit" class='btn btn-success btnLogin'>Connexion</button>
        </div>
        {{ form_end(form) }}

    </div>
{% endblock %}
